<div id="login" v-cloak>
  <div class="container">
    <h1 class="text-center">Logar-se no sistema</h1>
    <div class="login-form-container">
      <hr/>
      <form action="login" method="POST">
        <div class="form-group">
          <input name="email" type="email" class="form-control" placeholder="Email Address">
          <div class="invalid-feedback <%= (validations.email != undefined) ? 'validate-display' : '' %>">O E-mail digitado não combina com nenhum usuário.</div>
        </div>
        <div class="form-group">
          <input name="password" type="password" class="form-control" placeholder="Password">
          <div class="invalid-feedback <%= (validations.password != undefined) ? 'validate-display' : '' %>">Falha ao digitar senha.</div>
        </div>
        <div class="form-group form-check">
          <input class="form-check-input" type="checkbox" id="remember" name="rememberMe" />
          <label class="form-check-label" for="remember">Remember Me</label>
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%- _csrf %>" />
            <button type="submit" class="btn-dark btn-lg btn-block">Login</button>
        </div>
      </form>
      <p class="text-center"><a href="/password/forgot">Esqueceu sua Senha?</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
